@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div class="row align-content-center">
        <div class="col-md-6 offset-md-3"> 
            <div class="card login-logout-tab align-content-center login">
                <div class="logs-card-header">
                    <ul class="nav nav-tabs card-header-tabs-login">
                        <li class="nav-item-login">
                            <a class="nav-link-login" href="/Identity/Account/Login">Sign In</a>
                        </li>
                        <li class="nav-item-login">
                            <a class="nav-link-login" href="/Identity/Account/Register">Sign Up</a>
                        </li>
                    </ul>
                </div>
                <div class="card-content">
                    <div class="row">
                        <div class="col-md-12">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts{
    @await RenderSectionAsync("Scripts", required: false)
}

<script>
    $(function(){
        var current = location.pathname;
        $(".nav-tabs li a").each(function (){
            var $this = $(this);
            if(current.indexOf($this.attr("href")) !== -1) {
                $this.addClass("active");
            }
        })
    })
</script>